+                           G_DBUS_CALL_FLAGS_NONE,
+                           -1, NULL,
+                           upower_sleep_cb, NULL);
+}
+
+void
+gsd_power_suspend (GDBusProxy *upower_proxy)
+{
+	upower_suspend (upower_proxy);
+}
+
